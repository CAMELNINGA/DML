@page
@model IndexModel
@using Medical_System.Models
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Добро Пожаловать в нашу клинику</h1>


</div>


<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-interval="10000">
            <img src="~/image/hotp.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="2000">
            <img src="~/image/nolik.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/image/boll.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<div class=" position-relative" style="margin-left: 0%">
    <form class="form-inline" method="post">
        <input name="search" class="form-control mr-sm-2" type="search" placeholder="Поиск" aria-label="Search">
        <button class="btn btn-outline-light  my-2 my-sm-0" href="@Url.Page("./Index")" type="submit">Поиск</button>
    </form>
</div>

<div class="container-fluid">
    <div class="row">
        @foreach (Doctor sale in Model.doc)
        {
            <div class="card" style="width: 18rem;">
                <img src="/image/hol.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@sale.Name @sale.LastName</h5>

                    <p class="card-text">
                        Специальность: @sale.personalization
                        <br /> Название больницы:@sale.hospital_name
                        <br />Адрес больницы:@sale.location_hospital
                    </p>
                    <a class="btn btn-primary" href=@Url.Page("./Doctor",new{sale.Id})>Записаться к врачу</a>
                </div>
            </div>

        }
    </div>

</div>
